#! /bin/sh
set -e
ARCH=${1:?}
shift

case $ARCH in
  alpha)
    AS=@AS_MTALPHA@
    LD=@LD_MTALPHA@
    ;;
  sparc)
    AS=@AS_MTSPARC@
    LD=@LD_MTSPARC@
    ;;
  *)
    echo "$0: $ARCH: unknown architecture" >&2; exit 1 ;;
esac

src=
obj=
target=a.out
for arg in "$@"; do
  if test -n "$prev_arg"; then
     eval "$prev_arg=\$arg"
     prev_arg=
     continue
  fi
  case $arg in
    *.s) src="$src $arg" ;;
    *.o) obj="$obj $arg" ;;
    -o) prev_arg=target ;;
    *) echo "$0: don't know what to do with $arg" >&2; exit 1 ;;
  esac
done

tmpdir=$(mktemp -d -t aslink.XXXXXXXX)
toclean=
cleanup() {
  if test -z "$KEEP"; then
    for i in $toclean; do
      rm -f $i
    done      
    rm -rf "$tmpdir"
  else
    for i in $toclean $tmpdir; do 
      echo "$0: left over temporary: $i" >&2
    done
  fi
}
trap cleanup 0 ERR INT TERM QUIT

for f in $src; do
  of=$(echo $(dirname "$f")/$(basename "$f" .s)|tr '/.:' '___').o
  toclean="$toclean $of"
  $AS -o "$of" "$f"
  obj="$obj $of"
done

$LD -e main -Ttext 0x10000 -o "$target" $obj
